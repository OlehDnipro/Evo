struct VertexIn
{
	float2 pos    : Position;
	float2 uv     : TexCoord;
};

struct PixelIn
{
	float4 pos     : SV_Position;
	float2 uv      : TexCoord;
};

[Rootsig]
ROOT_BEGIN
ROOT_END
[Vertex: VS]

void main(VertexIn vert, out PixelIn res) 
{
	res.uv = vert.uv;
	res.pos = float4(vert.pos,0,0);
}

[Pixel: PS]
void main(PixelIn pix, out float4 outFragColor: SV_TARGET)
{
	outFragColor = float4(0.5,0,0,1);
} 